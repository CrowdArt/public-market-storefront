<% flash_delay ||= 3000 %>

$('.alert').remove();

<% flash.each do |type, message| %>
  <% flash.discard(type) %>
  $(".content-wrap").prepend("<%= j render partial: 'spree/shared/flash_message', locals: { type: type, message: message } %>");
  $(".alert").delay(<%= flash_delay %>).fadeOut("slow");
<% end %>
