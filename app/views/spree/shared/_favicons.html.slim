= favicon_link_tag 'favicons/favicon.ico'

= favicon_link_tag 'favicons/apple-touch-icon.png', type: nil, rel: 'apple-touch-icon', size: '180x180'
= favicon_link_tag 'favicons/safari-pinned-tab.svg', type: 'image/png', rel: 'mask-icon', color: '#000000'

- [16, 32].each do |s|
  = favicon_link_tag "favicons/favicon-#{s}x#{s}.png", rel: 'icon', type: 'image/png', sizes: "#{s}x#{s}"

- [192, 384].each do |s|
  = favicon_link_tag "favicons/android-chrome-#{s}x#{s}.png", rel: 'icon', type: 'image/png', sizes: "#{s}x#{s}"

link rel='manifest' href='/site.webmanifest'

meta name='msapplication-TileColor' content='#000000'
meta name='msapplication-TileImage' content=image_path('favicons/mstile-150x150.png')
meta name='msapplication-config' content='/browserconfig.xml'

meta name='theme-color' content='#000000'
