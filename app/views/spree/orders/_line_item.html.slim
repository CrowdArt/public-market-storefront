ruby:
  variant = line_item.variant
  available_qty = variant.total_on_hand
  variant_quantity_max = [available_qty, line_item.quantity].max
  item_form ||= nil
  out_of_stock = item_form && line_item.insufficient_stock?

.row.line-item
  - if out_of_stock
    .col-xs-12.cart_container--out-of-stock-hint
      .text-info.info-icon-left.text-medium.semi-bold
        = t('orders.out_of_stock')

  .col-xs-4.col-sm-1
    - if variant.images.length == 0
      = link_to small_image(variant.product, class: 'img-responsive'), variant.product
    - else
      = link_to image_tag(variant.images.first.attachment.url(:small), class: 'img-responsive'), variant.product

  .col-xs-8.col-sm-11
    .row
      .col-xs-12.col-sm-6
        p= link_to line_item.name, product_path(variant.product), class: 'plain-link'
        small.text-muted class=('strike' if out_of_stock) = variant.options_text

        - if out_of_stock
          small.text-danger.margin-text-left = Spree.t(:out_of_stock)

      .col-xs-12.col-sm-3
        span.small-xs= line_item.single_money.to_html
        .text-rewards = t('products.rewards', rewards: line_item.single_rewards_amount)

      .col-xs-12.col-sm-1
        .row.condensed.flex.align-center
          .col-xs-6.col-sm-8
            - if item_form
              - disabled_selector = available_qty == 0 || variant_quantity_max == 1
              = item_form.select :quantity, options_for_select(1..variant_quantity_max, item_form.object.quantity), {}, disabled: disabled_selector, class: "form-control line_item_quantity #{'out-of-stock-input' if out_of_stock}"
              = item_form.hidden_field :quantity, value: 0, id: "order_line_items_attributes_#{line_item.id}_hidden_quantity", class: 'hidden-line-item-quantity', disabled: true
            - else
              = line_item.quantity

          - if item_form
            .col-xs-3.col-sm-12
              a.delete href='#' id="delete_#{dom_id(line_item)}" style='font-size:12px' = t('orders.remove_item')

            .col-xs-12
              = render partial: 'spree/orders/low_stock_quantity', locals: { show: true, value: available_qty }

      .col-xs-12.hidden-xs.col-sm-2.text-right.semi-bold
        = line_item.display_amount.to_html unless line_item.quantity.nil?
        .text-rewards = t('products.total_rewards', rewards: line_item.rewards_amount)
hr
