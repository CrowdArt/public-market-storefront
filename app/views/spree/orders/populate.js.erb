<%= render partial: 'spree/shared/flash_messages', locals: { sticky: true, additional_class: 'slide-down' } %>

var quantity = <%= [quantity_left(@variant), 1].max %>

$("#variant_id_<%= @variant.id %>").data('quantity', quantity)
$("#variant_id_<%= @variant.id %>").data('in-stock', <%= @variant.can_supply? %>)

Spree.changeQuantitySelectorOptions(quantity)

Spree.fetch_cart()
