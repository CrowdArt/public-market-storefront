<div class="panel panel-default" id="shipping" data-hook>
    <%= form.fields_for :bill_address do |form| %>
      <div class="panel-heading">
        <h3 class="panel-title"><%= Spree.t(:billing_address) %></h3>
      </div>
      <div class="panel-body" id="checkout_form_address">
        <p class="field checkbox">
          <%= label_tag :order_use_billing do %>
            <%= check_box_tag 'order[use_shipping]', '1', @order.shipping_eq_billing_address?, id: 'order_use_billing' %>
            <%= Spree.t(:use_shipping_address) %>
          <% end %>
        </p>
        <%= render partial: 'spree/address/form', locals: { form: form, address_type: 'billing', address: @order.bill_address } %>
      </div>
    <% end %>
  </div>
</div>
