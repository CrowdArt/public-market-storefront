#!/usr/bin/env bash

if [ "$#" == 1 ]; then
  ./bin/$1 run --rm --name "$USER"_web_console app bundle exec rails c
elif [ "$#" -gt 1 ]; then
  ./bin/$1 run --rm --name "$USER"_web_console app "${@:2}"
else
  echo Illegal number of arguments
  echo Usage: ./console ENVIRONMENT COMMAND
  echo ENVIRONMENT: required, staging or production
  echo COMMAND: optional, commands to execute, defaults to rails console
fi
